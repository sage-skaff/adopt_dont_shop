<h1>All Shelters</h1>

<%= link_to "Sort by number of pets", "/shelters?sort=pet_count" %>

<%= form_with url: "/shelters", method: :get, local: true do |f| %>
    <%= f.label :search %>
    <%= f.text_field :search %>
    <%= f.submit "Search" %>
<% end %>

<% @shelters.each_with_index do |shelter, index| %>
    <div id="shelter-<%= index %>">
        <h3><%= shelter.name %></h3>
        <p>Created at: <%= shelter.created_at %></p>
        <%= link_to "Update #{shelter.name}", "/shelters/#{shelter.id}/edit" %>
        <%= link_to "Delete #{shelter.name}", "/shelters/#{shelter.id}", method: :delete %>
    </div>
<% end %>

<div id="pending">
    <% if @pending_shelters != [] %>
        <h4>Shelters with Pending Applications</h4>
        <ul>
            <% @pending_shelters.each do |shelter| %>
                <li><%= "#{shelter.name}" %></li>
            <% end %>
        </ul>
    <% end %>
</div>

